---
import Container from "./Container.astro";
---

<Container
    class="py-4 lg:py-6 mt-4 border-t border-gray-100 dark:border-gray-800"
>
    <div
        class="flex flex-col lg:flex-row gap-4 lg:gap-0 items-center justify-between"
    >
        <div>
            <a href="/" class="relative block">
                <img src="/logo-dark.png" alt="Kamil Marut" width={32} />
            </a>
        </div>
        <div class="text-sm text-center">
            Copyright © {new Date().getFullYear()} Kamil Marut. All rights reserved.
        </div>
        <div>
            <span class="text-sm text-center text-gray-800 dark:text-gray-500">
                <a
                    href="https://github.com/exler"
                    rel="noopener"
                    target="_blank"
                >
                    GitHub
                </a>· <a
                    href="https://linkedin.com/in/kamilmarut"
                    rel="noopener"
                    target="_blank"
                >
                    LinkedIn
                </a>
            </span>
        </div>
    </div>
</Container>
