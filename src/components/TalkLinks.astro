---
interface TalkItem {
    title: string;
    event: string;
    date: Date;
    slidesLink: string;
    videoLink?: string;
}

interface Props {
    items: TalkItem[];
    class?: string;
}

const { items, class: className } = Astro.props;
import { twMerge } from "tailwind-merge";
---

<ul class={twMerge("flex flex-col gap-2", className)}>
    {
        items.map((item) => (
            <li class="grid grid-cols-[80px_1fr_40px_40px] sm:grid-cols-[200px_1fr_40px_40px] gap-4 items-start">
                <span class="break-words">{item.event}</span>
                <span class="break-words">{item.title}</span>
                <a
                    class="text-white hover:text-[#F7AC3A] flex justify-center"
                    title="Slides"
                    href={item.slidesLink}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        viewBox="0 0 256 256"
                    >
                        <path d="M200,24H56A16,16,0,0,0,40,40V216a16,16,0,0,0,16,16H200a16,16,0,0,0,16-16V40A16,16,0,0,0,200,24Zm0,192H56V40H200ZM176,88a8,8,0,0,1-8,8H88a8,8,0,0,1,0-16h80A8,8,0,0,1,176,88Zm0,40a8,8,0,0,1-8,8H88a8,8,0,0,1,0-16h80A8,8,0,0,1,176,128Zm0,40a8,8,0,0,1-8,8H88a8,8,0,0,1,0-16h80A8,8,0,0,1,176,168Z" />
                    </svg>
                </a>
                {item.videoLink ? (
                    <a
                        class="text-white hover:text-[#F7AC3A]"
                        title="Recording"
                        href={item.videoLink}
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            fill="currentColor"
                            viewBox="0 0 256 256"
                        >
                            <path d="M216,40H40A16,16,0,0,0,24,56V160a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A16,16,0,0,0,216,40Zm0,120H40V56H216V160ZM176,200a8,8,0,0,1-8,8H88a8,8,0,0,1,0-16h80A8,8,0,0,1,176,200Z" />
                        </svg>
                    </a>
                ) : (
                    <span />
                )}
            </li>
        ))
    }
</ul>
