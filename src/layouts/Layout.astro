---
interface Props {
    title?: string;
    description?: string;
}

const { title = "Kamil Marut", description = "Founder and solutions architect at Majikode. Specializing in development of high-performance and maintainable digital products." } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/png" href="/icon.png" />
        <link rel="apple-touch-icon" href="/apple-icon.png" />
        <title>{title}</title>
        <script data-goatcounter="https://exler.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    </head>
    <body class="max-w-2xl mx-2 sm:mx-auto py-8 font-sans">
        <main>
            <slot />
        </main>
        <footer class="flex items-center justify-end gap-1 p-4 text-xs">
            <span class="text-neutral-500">Â© {new Date().getFullYear()}</span>
            <a href="/" class="text-white hover:text-[#F7AC3A]">KAMILMARUT.COM</a>
        </footer>
    </body>
</html>

<style is:global>
    @import "tailwindcss";
    @plugin "@tailwindcss/typography";

    :root {
        --background: #212121;
        --foreground: #ededed;
    }

    body {
        color: var(--foreground);
        background: var(--background);
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
