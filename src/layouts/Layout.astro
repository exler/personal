---
import "@fontsource/spectral";
import "@fontsource-variable/eb-garamond";

import { Image } from "astro:assets";

import backgroundImage from "@/assets/background-image.png";
import DividerDashed from "@/components/DividerDashed.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "Kamil Marut",
    description = "Running Majikode consulting agency. Senior data engineer at Nearform. Co-founder of WorkWave. Advocating for open-source and privacy-oriented software.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/png" href="/icon.png" />
        <link rel="apple-touch-icon" href="/apple-icon.png" />
        <title>{title}</title>
        <script is:inline data-goatcounter="https://exler.goatcounter.com/count" async src="//gc.zgo.at/count.js"
        ></script>
    </head>
    <body class="max-w-3xl sm:mx-auto py-8">
        <Image src={backgroundImage} alt="" class="w-full" />
        <!-- <Header />
        <DividerDashed class="my-4" /> -->
        <main class="max-w-2xl mx-2 sm:mx-auto">
            <slot />
        </main>
        <Footer />
    </body>
</html>

<style is:global>
    @import "tailwindcss";
    @plugin "@tailwindcss/typography";

    :root {
        --foreground: #212121;
        --background: #fefefe;
        --primary: #07161d;
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: "EB Garamond Variable", serif;
    }

    body {
        color: var(--foreground);
        background: var(--background);
        font-family: "Spectral", serif;
    }

    a {
        color: var(--primary);
    }
</style>
